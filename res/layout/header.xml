<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:background="@drawable/gradient_green"
    android:id="@+id/parentHeader"
    >
	<ImageView 
		android:id="@+id/homeIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/jajan_head"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="5dip"
	/>
	<ImageView 
		android:id="@+id/eyeIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/eye"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="12dip"
		android:layout_marginLeft="12dip"
		android:onClick="startARView"
	/>
	<ImageView
		android:id="@+id/div1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/divider"
		android:layout_toLeftOf="@id/eyeIcon"
	/>
	<ImageView 
		android:id="@+id/markerIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/marker"
		android:layout_toLeftOf="@id/div1"
		android:layout_centerVertical="true"
		android:layout_marginRight="15dip"
		android:layout_marginLeft="15dip"
		android:onClick="refreshLocation"
	/>
	<ImageView
		android:id="@+id/div2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/divider"
		android:layout_toLeftOf="@id/markerIcon"
	/>
</RelativeLayout>