<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#faffdf"
    >
	<RelativeLayout
		android:id="@+id/mainInfo"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="20dip"
	    android:background="#fffaee"
	    >
	    <RelativeLayout
	    	android:id="@+id/bizInfo"
	    	android:layout_width="250dip"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentLeft="true"
	    >
	    	<TextView 
	    		android:id="@+id/bizName"
	    		android:text="Warung Pojok"
	    		android:textColor="#f6891a"
	    		android:textSize="18dip"
	    		android:textStyle="bold"
	    		android:layout_width="200dip"
	    		android:layout_height="wrap_content"
	    	/>
	    	<TextView 
	    		android:id="@+id/bizAddr"
	    		android:text="Pondok Indah Mall 1"
	    		android:textColor="#444444"
	    		android:textSize="14dip"
	    		android:layout_width="200dip"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@id/bizName"
	    	/>
	    	<ImageView
	    		android:id="@+id/bizRating"
	    		android:src="@drawable/s_rate0"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@id/bizAddr"
	    	/>
	    	<TextView 
	    		android:id="@+id/bizReviewCount"
	    		android:text="5 Reviews"
	    		android:textColor="#444444"
	    		android:textSize="9dip"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@id/bizRating"
	    		android:layout_marginTop="2dip"
	    	/>
	    	<TextView
	    		android:id="@+id/bizReview"
	    		android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean auctor pulvinar quam, id hendrerit felis tincidunt id.."
	    		android:textColor="#444444"
	    		android:textSize="12dip"
	    		android:textStyle="italic"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@id/bizReviewCount"
	    		android:layout_marginTop="10dip"
	    	/>
	    </RelativeLayout>
	    <ImageView 
	    	android:id="@+id/bizLogo"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/biz_default"
	    	android:layout_alignParentRight="true"
	    	android:background="#cccccc"
	    	android:padding="1dip"
	    />
	</RelativeLayout>
	<RelativeLayout
    	android:id="@+id/badges"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="#000000"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip"
    	android:paddingTop="4dip"
    	android:paddingBottom="4dip"
    	android:layout_below="@id/mainInfo"
    	android:layout_alignRight="@id/mainInfo"
    	android:visibility="gone"
    >
    	<ImageView 
    		android:id="@+id/urbSmall"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/urb_small"
    	/>
    	<TextView
    		android:id="@+id/isUrspot"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="This is UrSpot!"
    		android:textColor="#fefefe"
    		android:textStyle="bold"
    		android:layout_toRightOf="@id/urbSmall"
    		android:textSize="10dip"
    		android:layout_marginLeft="4dip"
    		android:visibility="gone"
    	/>
    	<TextView
    		android:id="@+id/isPanoramic"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="360 View"
    		android:textColor="#fefefe"
    		android:textStyle="bold"
    		android:layout_toRightOf="@id/urbSmall"
    		android:layout_below="@id/isUrspot"
    		android:textSize="10dip"
    		android:layout_marginLeft="4dip"
    		android:visibility="gone"
    	/>
    </RelativeLayout>
    <RelativeLayout
    	android:id="@+id/alphaDiv"
   		android:background="#00ffffff"
   		android:layout_width="wrap_content"
   		android:layout_height="7dip"
   		android:layout_below="@id/badges"
   		android:visibility="gone"
   	></RelativeLayout>
</RelativeLayout>